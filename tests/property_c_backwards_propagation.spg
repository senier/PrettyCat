<?xml version="1.0"?>
<spg>

    <env id="Input" integrity="true" confidentiality="true">
        <description>
            Trusted input
        </description>
        <flow sarg="data" sink="Encrypt" darg="plaintext"/>
    </env>

    <const id="IV" confidentiality="false">
        <description>
            Static IV
        </description>
        <flow sarg="const" sink="Encrypt" darg="ctr"/>
    </const>

    <env id="Encryption key" confidentiality="true" integrity="true">
        <description>
            Static key
        </description>
        <flow sarg="data" sink="Encrypt" darg="key"/>
    </env>

    <encrypt_ctr id="Encrypt">
        <description>
            Symmetric counter mode encryption
        </description>
        <flow sarg="ctr" sink="Message" darg="ctr"/>
        <flow sarg="ciphertext" sink="Branch" darg="data"/>
    </encrypt_ctr>

    <xform id="Branch" code="branch">
        <description>
            Duplicate ciphertext
        </description>
        <flow sarg="data#1" sink="HMAC" darg="msg"/>
        <flow sarg="data#2" sink="Message" darg="msg"/>
       <arg name="data"/>
    </xform>

    <env id="MAC key" confidentiality="true" integrity="true">
        <description>
            Static key
        </description>
        <flow sarg="data" sink="HMAC" darg="key"/>
    </env>

    <hmac id="HMAC">
        <description>
            MAC encrypted message
        </description>
        <flow sarg="auth" sink="Message" darg="auth"/>
    </hmac>

    <xform id="Message" code="assemble_message">
        <description>
            Assemble message
        </description>
        <flow sarg="data" sink="Output" darg="data"/>
        <arg name="ctr"/>
        <arg name="msg"/>
        <arg name="auth"/>
    </xform>

    <env id="Output" integrity="false" confidentiality="false">
        <description>
            Send out encrypted/integrity protected message
        </description>
        <arg name="data"/>
    </env>
</spg>
