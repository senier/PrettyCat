<?xml version="1.0"?>
<spg>

    <input id="Plaintext_Input" integrity="false" confidentiality="true">
        <description>
            Trusted plaintext input
        </description>
        <config port="10000"/>
        <flow sarg="data" sink="Encrypt" darg="plaintext"/>
    </input>

    <input id="Key_Input">
        <description>
            Trusted key input
        </description>
        <config port="10001"/>
        <flow sarg="data" sink="Encrypt" darg="key"/>
    </input>

    <input id="Ctr_Input" integrity="true" confidentiality="false">
        <description>
            Trusted ctr input
        </description>
        <config port="10002"/>
        <flow sarg="data" sink="Encrypt" darg="ctr"/>
    </input>

    <encrypt_ctr id="Encrypt">
        <description>
            Symmetric counter mode encryption
        </description>
        <config algo="aes" keylen="128"/>
        <flow sarg="ctr" sink="Concat" darg="ctr"/>
        <flow sarg="ciphertext" sink="Concat" darg="data"/>
    </encrypt_ctr>

    <xform id="Concat" code="concat">
        <description>
            Build message
        </description>
        <arg name="ctr"/>
        <arg name="data"/>
        <flow sarg="ciphertext" sink="Ciphertext_Output" darg="data"/>
    </xform>

    <output id="Ciphertext_Output" integrity="false" confidentiality="false">
        <description>
            Ciphertext output
        </description>
        <config port="10003"/>
        <arg name="data"/>
    </output>

</spg>
