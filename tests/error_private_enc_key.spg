<?xml version="1.0"?>
<spg>
    <input id="Msg" confidentiality="false" integrity="true">
        <description>
            Message
        </description>
        <flow sarg="data" sink="Sign" darg="msg"/>
    </input>

    <const id="Public key">
        <description>
            Public key
        </description>
        <flow sarg="const" sink="Sign" darg="pubkey">
            <assert integrity="true"/>
        </flow>
    </const>

    <const id="Private key">
        <description>
            Secret key
        </description>
        <flow sarg="const" sink="Branch Key" darg="data">
            <assert confidentiality="true"/>
        </flow>
    </const>

    <branch id="Branch Key">
        <description>
            Branch secret key
        </description>
        <flow sarg="data#1" sink="Sign" darg="privkey">
            <assert confidentiality="true"/>
        </flow>
    </branch>

    <sign id="Sign">
        <description>
            Sign input
        </description>
        <flow sarg="auth" sink="Output" darg="auth"/>
    </sign>

    <output id="Output" confidentiality="false" integrity="false">
        <description>
            Output guaranteeing integrity
        </description>
        <arg name="auth"/>
    </output>
</spg>

